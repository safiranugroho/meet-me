<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FriendListFragment">

    <TextView
        android:id="@+id/noFriendsPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/placeholderPadding"
        android:paddingRight="@dimen/placeholderPadding"
        android:gravity="center"
        android:text="@string/no_friends_placeholder"
        android:textAlignment="center"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/description"
        android:textStyle="italic"
        android:visibility="visible" />

    <ListView
        android:id="@+id/friendList"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:divider="@color/accent"
        android:dividerHeight="0.5dp"
        android:textSize="@dimen/content"
        android:textColor="@color/primary_text"
        android:visibility="visible" />

</FrameLayout>
